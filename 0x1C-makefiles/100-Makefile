# Compiler and compiler flags
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic

# Source files, object files, and executable name
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

# Default rule to build the executable
all: $(NAME)

# Rule to build the executable
$(NAME): $(SRC) m.h
	$(CC) $(CFLAGS) $(SRC) -o $(NAME)

# Rule to clean Emacs and Vim temporary files along with the executable
clean:
	$(RM) $(NAME)
	$(RM) *~ \#* \.swp \.swo

# Rule to delete object files
oclean:
	$(RM) $(OBJ)

# Rule to delete Emacs and Vim temporary files, the executable, and object files
fclean: clean oclean

# Rule to force recompilation of all source files
re: fclean all
